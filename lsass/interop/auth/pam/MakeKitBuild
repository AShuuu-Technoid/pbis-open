make()
{
    PAM_SOURCES="\
       pam-acct.c      \
       pam-auth.c      \
       pam-context.c   \
       pam-conv.c      \
       pam-error.c     \
       pam-globals.c   \
       pam-passwd.c    \
       pam-session.c   \
       pam-notify.c"

    if [ "$MK_BUILD_DISTRO" = "debian" ] 
    then
       mk_define __LWI_DEBIAN__ 1
    fi

    mk_multiarch_do
        case "$MK_HOST_OS" in
            hpux) PAMEXT=.sl ;;
            *) PAMEXT="$MK_DLO_EXT" ;;
        esac
        mk_dlo \
	    DLO=pam_lsass \
	    EXT="$PAMEXT" \
	    INSTALLDIR="$PAMDIR" \
	    SOURCES="$PAM_SOURCES" \
	    INCLUDEDIRS="../include ../../../include" \
	    HEADERDEPS="lwmsg/lwmsg.h lwadvapi.h" \
	    LIBDEPS="lsaauth pam crypt"
    mk_multiarch_done
}
