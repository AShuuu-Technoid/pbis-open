configure()
{
    mk_check_headers \
      termios.h unistd.h stdlib.h stdio.h errno.h \
      string.h stdlib.h ctype.h sys/stat.h sys/types.h \
      sys/ioctl.h
}

make()
{
    mk_headers \
        MASTER="linenoise.h"

    mk_library \
        LIB=linenoise \
        HEADERDEPS="linenoise.h" \
        SOURCES="linenoise.c"
}
